@{
    ViewBag.Title = "UnAssignTeachers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Unassign all Courses</title>
</head>
<body>
    <fieldset>
        <legend>Unassign all Courses</legend>
        <div align="center">
            <input type="submit" value="Unassign All Teacher" id="UnallocateTeacher" />
        </div>
    </fieldset>
</body>
</html>



<script src="~/Scripts/bootstrap.min.js"></script>

<script src="~/Scripts/jquery-3.1.0.min.js"></script>
<script>
    $(document).ready(function () {
        $("#UnallocateTeacher").click(function () {

            var r = confirm("Are you sure to unallocate all Teacher info?");
            if (r == true) {

                alert("All Teacher info unallocated successffully!");

            }

        });
    });

</script>